<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MaintenanceRecords" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customizations -->
    </style>
    <style name="Theme.MaintenanceRecords.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customizations for dark mode -->
    </style>
    <style name="Theme.MaintenanceRecords.Material" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.MaintenanceRecords.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MaintenanceRecords.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
