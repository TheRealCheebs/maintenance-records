<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MaintenanceTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Custom Outlined Button Style -->
    <style name="CustomOutlinedButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/outlined_button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <!-- Custom Outlined Icon Button Style -->
    <style name="CustomOutlinedIconButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/outlined_icon_button_background</item>
        <item name="android:tint">@color/button_text_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>
